{
  "manifest_version": 3,
  "name": "Quote Card Generator",
  "version": "1.0",
  "description": "Generate beautiful quote cards from any page.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "clipboardRead"
  ],
  "host_permissions": ["https://api.razorpay.com/*", "https://api.adviceslip.com/*", "https://ipapi.co/json/"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}